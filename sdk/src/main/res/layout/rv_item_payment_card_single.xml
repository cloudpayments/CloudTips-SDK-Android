<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ru.cloudtips.edit_card.editcard.EditCard
        android:id="@+id/edit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:core_card_action_icon="@drawable/ic_card_scanner"
        app:core_error_color="@color/colorRed"
        app:core_hint_color="@color/colorTextSecondary"
        app:core_mode="standard"
        app:core_text_color="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_line_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/cards_divider_line_selector"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/fake_click_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>